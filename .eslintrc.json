{
  "env": {
    "browser": true,
    "es2021": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error"
    ],
    "react/state-in-constructor": "off",
    "no-unused-vars": "warn",
    "react/prop-types": 0
  }
}